<div class="container">
  <div class="row">
    <div class="col-xl-12 text-center">
      <h1> Play Burgers! </h1>
    </div>
    <img class="animated-gif text-center" src="https://media2.giphy.com/media/xTiTnwj1LUAw0RAfiU/giphy.gif"
      alt="this will display an animated GIF" />
  </div>

  <div class="row no-gutters">
    <div class="col-6">
      <h2> On our Menu </h2>

      <div class="menu">
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="col-6">
      <div class="tummy">
        <h2>Burgers in your tummy!</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devour=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class='col-lg-12 text-center'>
    <div class="dahbutton">
      <form>

        <div class="form-group text-center">
          <input type="text" id="burgerdata" aria-describedby="emailHelp">
          <small id="emailHelp" class="form-text text-muted">Enter a burger you want to eat!</small>
        </div>
        <button type="submit" class="btn btn-warning">Submit</button>

      </form>
    </div>
  </div>
</div>